<% content_for :title, "GraphiQL" %>

<div style="height: 100vh; width: 100vw; margin: 0;" id="graphiql-injection-point"></div>

<script src="<%= asset_pack_path 'media/src/vendor/graphiql-1.0.0-alpha.10.static.js' %>"></script>

<%= javascript_tag nonce: true do %>
  let graphQLFetcher = (graphQLParams) => {
    return fetch(window.location.origin + '/graphql', {
      method: 'post',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(graphQLParams),
    }).then(response => response.json());
  }

  ReactDOM.render(
    React.createElement(GraphiQL, { fetcher: graphQLFetcher }),
    document.getElementById("graphiql-injection-point")
  );
<% end %>
